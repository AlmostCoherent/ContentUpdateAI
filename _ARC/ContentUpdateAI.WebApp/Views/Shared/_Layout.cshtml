@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/runtime.js"></script>
    <script type="text/javascript" src="~/Scripts/polyfills.js"></script>
    <script type="text/javascript" src="~/Scripts/styles.js"></script>
    <script type="text/javascript" src="~/Scripts/vendor.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>
    @Styles.Render("~/Content/Styles")
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/Script/Bundles")
    @Scripts.Render("~/Script/app")
</body>
</html>